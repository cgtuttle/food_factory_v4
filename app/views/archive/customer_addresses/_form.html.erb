<%= form_with model: [@customer, @address], url: customer_addresses_path(@customer), role: 'form' do |f| %>
  <%= render 'layouts/alerts/errors', index: @user %>

  <div class="row">
    <div class="col-xl-4">
      <div class="form-group">
        <%= f.label :code %>
        <%= f.text_field :code, class: "form-control" %>
      </div>
    </div>

    <div class="col">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :address_1, "Address Line 1" %>
      <%= f.text_field :address_1, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :address_2, "Address Line 2" %>
      <%= f.text_field :address_2, :class => "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-4">
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>

    <div class="col">
      <div class="form-group">
        <%= f.label :state %>
        <%= f.text_field :state, :class => "form-control" %>
      </div>
    </div>

    <div class="col">
      <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, :class => "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
    <%= link_to "Cancel", :back, :class => 'btn btn-secondary' %>
  </div>

<% end %>