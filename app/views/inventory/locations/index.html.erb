<% content_for :table do %>

  <%= form_with model: @location, url: locations_path, id: "inventory_location_table_form" do |form| %>
    <table class="form-table" id="locations-table">
      <thead>
        <%= render 'index_table_head' %>
      </thead>
      <tbody>
        <%= render partial: "index_form", locals: {f: form} %>
        <%= render 'index_table_body'%>
      </tbody>
    </table>
  <% end %>
<% end %>

