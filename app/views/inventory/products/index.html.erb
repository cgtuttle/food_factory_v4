<% content_for :context_title do %>
  <% if @item %>
    <%= @item.name %> Products
  <% else %>
    Products
  <% end %>
<% end %>

<div class="add-new sticky">
  <%= render 'application/shared/link_new' %>
</div>

<%= form_with(url: products_path, model: @product, id: "inventory_product_table_form", local: true) do |form| %>
  <table class="form-table" id="products-table">
    <thead>
      <%= render 'index_table_head' %>
    </thead>
    <tbody>
      <%= render partial: "index_form", locals: {f: form} %>
      <%= render 'index_table_body'%>
    </tbody>
  </table>
<% end %>



