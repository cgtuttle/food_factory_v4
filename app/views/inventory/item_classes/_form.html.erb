<%= form_with(model: @item_class, url: locals[:path], local: true) do |f| %>
  <%= render 'layouts/alerts/errors', index: @item_class %>

  <div class="row">
    <div class="col-xl-6">
      <div class="form-group">
        <%= f.label :code %>
        <%= f.text_field :code, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :lot_format %>
        <%= f.select :lot_format, ['Text', 'Date', 'Number'], {}, {class: "form-control"} %>
      </div>

      <div class="form-check">
        <%= f.check_box :product %>
        <%= f.label :Product? %>
      </div>

      <div class="form-group">
        <%= f.submit 'Submit', :class => 'btn btn-primary' %>
        <%= link_to "Cancel", :back, :class => 'btn btn-secondary' %>
      </div>
    </div>
  </div>

<% end %>