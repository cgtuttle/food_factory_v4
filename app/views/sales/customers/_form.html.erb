<div class="row">
  <div class="col-xl-6">
    <%= form_with model: @customer, url: locals[:path], role: 'form' do |f| %>
      <%= render 'layouts/alerts/errors', index: @user %>

      <%= f.fields_for :account, @account do |ff| %>

        <div class="form-group">
          <%= ff.label :code %>
          <%= ff.text_field :code, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= ff.label :name %>
          <%= ff.text_field :name, :class => "form-control" %>
        </div>
      <% end %>

      <div class="form-group mt-4">
        <%= f.submit 'Submit', :class => 'btn btn-primary' %>
        <%= link_to "Cancel", :back, :class => 'btn btn-secondary' %>
      </div>

    <% end %>
  </div>
</div>

