<% content_for :secure do %>
  <%= render "layouts/navbar" %>

  <div class="container-fluid" id="app-window">
    <% if true %>
      <div class="wrapper" id="app-row">
        
        <nav id="sidebar" class="out">
          <%= render "/layouts/accordion_menu" %>
        </nav>

        <div id="content" class="ml-2">
          <div class="row mt-3">

            <%= tag.div class: app_width_class do %>                     
              <div class="flex-container">
                <div class="sidebar-toggle">
                  <%= render "/application/shared/sidebar_toggle" %>
                </div>

                <% if content_for?(:breadcrumbs) %>
                  <div>
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb">
                        <%= yield :breadcrumbs %>
                      </ol>
                    </nav>
                  </div>
                <% end %> 

                <h3><%= content_for?(:context_title) ? yield(:context_title) : app_page_title %></h3> 
              
              </div>

              <div class="row">
                <div class="col">
                  <hr/ class="list-header">
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <%= content_for?(:content) ? yield(:content) : yield %>
                </div>
              </div>
            <% end %>

            <div class="col"></div>
          </div>
        </div>     
      </div>
    <% end %>
  </div>
<% end %>

<%= render template: "layouts/application" %>